// sets binary flags
function setflag(&$var, $flag, $set=ON) {
  if ($set==ON) $var = ($var | $flag);
  if ($set==OFF) $var = ($var & ~$flag);
}



/**
 * Implements hook_exit().
 *
 * Gathers statistics for page accesses.
 */
function apachesolr_popularity_exit() {
  
  //global $user;

  drupal_bootstrap(DRUPAL_BOOTSTRAP_VARIABLES);
  
  if (variable_get('popularity_tracker', 0)) {
    // We are counting content views.
    if (arg(0) == 'node' && is_numeric(arg(1)) && arg(2) == NULL) {
      // Don't update if front page tracking is disabled AND the node is the front page
      if (!(variable_get('apachesolr_popularity_disable_frontpage', 1) AND _apachesolr_popularity_get_front_page_nid() == arg(1))) {  
        // Get node publish status
        $node_status = db_query("SELECT status FROM {node} WHERE nid = :nid LIMIT 1", array(':nid' => arg(1)))->fetchField();
        // Check if the only track published pages field is set and the node is unpublished
        if (!(variable_get('apachesolr_popularity_only_published') AND !$node_status)) {
          // A node has been viewed, so update the node's counters.
          db_merge('apachesolr_popularity_counter')
            ->key(array('nid' => arg(1)))
            ->insertFields(array(
              'popularity' => (float) variable_get('apachesolr_popularity_init_popularity', 20.0),
              'recentcount' => 1,
            ))
            ->expression('recentcount', 'recentcount + 1')
            ->execute();
        }
      }
    }
  }
}

